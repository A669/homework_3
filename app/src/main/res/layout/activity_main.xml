<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">




    <EditText
        android:id="@+id/editFirstName"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:layout_marginTop="20dp"
       app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <EditText
        android:id="@+id/editSeconName"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:hint="Second Name"
        app:layout_constraintTop_toBottomOf="@+id/editFirstName"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/editThirdName"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:hint="Third name"
        app:layout_constraintBottom_toBottomOf="@+id/editSeconName"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/SHARE"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="SHARE"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="150dp"
        app:layout_constraintTop_toBottomOf="@+id/editSeconName"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:layout_marginTop="50dp"
        app:layout_goneMarginRight="100dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintLeft_toRightOf="@+id/SHARE"
        app:layout_constraintBottom_toBottomOf="@+id/SHARE"

        />



</androidx.constraintlayout.widget.ConstraintLayout>